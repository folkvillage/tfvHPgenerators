$(function() {
	// スマホ用の処理
	if( switch_smartphone() ){
		$('#live_wrap').css('width', '100%');
		$('#live_year_active').click(function(){
			$('#live_list').toggle();
		});
//		$('#live_list').css('display', 'none');
